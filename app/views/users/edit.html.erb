<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this obj from being saved:
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>

      <div class="form-group">
        <h6>Name</h6>
        <%= f.text_field :name, id:"inputName", class: "form-control name" %>
      </div>

      <div class="form-group">
        <h6>Image</h6>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>

      <div class="form-group">
        <h6>Introduction</h6>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <%= f.submit "Update User", class: "btn btn-secondary" %>

      <% end %>
    </div>
  </div>
</div>