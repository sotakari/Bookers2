    <div class="col-md-3">
      <h2>User info</h2>
      <p><%= image_tag user.get_profile_image(100,100) %></p>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
          <th>name</th>
          <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
          <%= form_with model: @book do |f| %>
          <div class="form-group">
            <h6>Title</h6>
            <%= f.text_field :title, class: "form-control book_title", value: nil %>
          </div>
          <div class="form-group">
            <h6>Opinion</h6>
            <%= f.text_area :body, class: "form-control book_body", value: nil %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
          <% end %>
    </div>